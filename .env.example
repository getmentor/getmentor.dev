# Go API Configuration
NEXT_PUBLIC_GO_API_URL=http://localhost:8081
GO_API_INTERNAL_TOKEN=your_internal_api_token_here

# ReCAPTCHA (client-side only, Go API handles verification)
NEXT_PUBLIC_RECAPTCHA_V2_SITE_KEY=

# Azure Storage (for profile images)
NEXT_PUBLIC_AZURE_STORAGE_DOMAIN=
AZURE_STORAGE_DOMAIN=
AZURE_STORAGE_CONTAINER_NAME=

# Metrics Authentication (for /api/metrics endpoint security)
METRICS_AUTH_TOKEN=your_metrics_auth_token_here

# Logging Configuration (simplified, stdout only)
LOG_LEVEL=info

# Grafana Faro (client-side observability)
# NEXT_PUBLIC_FARO_COLLECTOR_URL must be set to enable Faro (any non-empty value)
# FARO_COLLECTOR_URL is the actual Grafana Cloud collector URL (server-side rewrite)
# NEXT_PUBLIC_FARO_COLLECTOR_URL=enabled
# FARO_COLLECTOR_URL=https://faro-collector-prod-eu-west-3.grafana.net/collect/your-app-key
# NEXT_PUBLIC_FARO_APP_NAME=getmentor
