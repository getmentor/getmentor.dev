# Go API Configuration
NEXT_PUBLIC_GO_API_URL=http://localhost:8081
GO_API_INTERNAL_TOKEN=your_internal_api_token_here

# ReCAPTCHA (client-side only, Go API handles verification)
NEXT_PUBLIC_RECAPTCHA_V2_SITE_KEY=

# Azure Storage (for profile images)
NEXT_PUBLIC_AZURE_STORAGE_DOMAIN=
AZURE_STORAGE_DOMAIN=
AZURE_STORAGE_CONTAINER_NAME=

# Metrics Authentication (for /api/metrics endpoint security)
METRICS_AUTH_TOKEN=your_metrics_auth_token_here

# Logging Configuration
LOG_LEVEL=info
# LOG_DIR: Directory for log files (default: ./logs in dev, /app/logs in production)
# LOG_DIR=/app/logs

# Observability Configuration - Grafana Faro (client-side)
# NEXT_PUBLIC_FARO_COLLECTOR_URL: Set to any value to enable Faro (e.g., "enabled")
# Leave empty or unset to disable client-side tracing
# NEXT_PUBLIC_FARO_COLLECTOR_URL=enabled

# FARO_COLLECTOR_URL: Actual Grafana Cloud Faro collector URL (server-side rewrite)
# This is the real endpoint, proxied through Next.js /faro-collect route
# FARO_COLLECTOR_URL=https://faro-collector-prod-eu-west-3.grafana.net/collect/your-app-key

# Service Identity (for Faro resource attributes)
NEXT_PUBLIC_FARO_APP_NAME=getmentor-frontend
NEXT_PUBLIC_O11Y_SERVICE_NAMESPACE=getmentor-dev
NEXT_PUBLIC_O11Y_FE_SERVICE_VERSION=1.0.0

# Application Environment (production, staging, development)
NEXT_PUBLIC_APP_ENV=production

# Faro Sampling Rate (0.0 to 1.0, where 1.0 = 100%)
NEXT_PUBLIC_FARO_SAMPLE_RATE=1.0
